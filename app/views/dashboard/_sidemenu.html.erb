    <div class="menuheader small-12 columns">
      <%= _("credit") %>: <span id="credit">40000</span> B
    </div>
    </div>

    <ul class="menu row">
      <li class="small-12 columns"><a href="<%=  advertises_path %>"><i class="icon-inbox icon-large"></i> <%= _("advertises") %></a></li>
