<!DOCTYPE html>
<html>
<head>
  <title><%=t :shakhak %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body dir="rtl">

  <%= render "dashboard/navbar" %>

<div class="container">
  <div class="row">

    <div class="span3 ">

    <% if content_for?(:sidebar) %>
      <%= yield(:sidebar) %>
    <% else %>

      <%= render "dashboard/sidemenu" %>
    <% end %>


    </div>

    <div class="span9">
      <div class="row">
	<div class="span8">
	  <p class="text-success"><%= notice %></p>
	  <p class="text-error"><%= alert %></p>
	</div>
      </div>
    <%= yield %>
    </div>

  </div>
</div>

</body>
</html>
