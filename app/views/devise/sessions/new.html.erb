<div class="row">
  <div class="small-12 large-centered large-6 columns">
    <fieldset>

    <legend><%= _("Sign in") %></legend>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="row">
	<div><%= f.email_field :email, :autofocus => true, :placeholder => _("Email ...."), :class => "small-10 small-centered columns" %></div>
      </div>

      <div class="row">
	<div><%= f.password_field :password, :placeholder => _("Password ...."), :class => "small-10 small-centered columns" %></div>
      </div>
      <br />
      <% if devise_mapping.rememberable? -%>
        <div class="row">
	  <div class="small-10 small-centered columns"><%= f.check_box :remember_me %><span class="small-text"><%= _("Remember me") %></span></div>
	</div>
      <% end -%>
      <div class="row">
	<div><%= f.submit "Sign in", :class => "button medium success radius large-centered small-offset-8 small-3" %></div>
      </div>
    <% end %>

    <a href="/auth/twitter/">Twitter</a>
    <a href="/auth/google_oauth2/">Google</a>
    <%= render "devise/shared/links" %>
    </fieldset>
  </div>
</div>
