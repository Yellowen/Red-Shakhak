<%=stylesheet_link_tag("registrations") %>
<div class="wrapper_signup">
  <div class="row">
    <div class="layout_signup">
      <div class="row">
	<div class="large-7 columns">
          <h1><%=_("Sign Up") %></h1>

	  <div class="justify row">
            <i class="icon-coffee icon-big"></i>
            <p>
	      <%= _("You can join this site fee and add your advertises and many users of Internet will see your advertises.") %>
            </p>
	  </div>

	  <br />

	  <div class="justify row">
	    <i class="icon-globe icon-big"></i>
            <p>
	      <%= _("We will help you globalize your business and introduce your services or products to the world") %>
            </p>
	  </div>

	  <br />

	  <div class="justify row">
            <i class="icon-money icon-big"></i>
            <p>
	      <%= _("Introduce yourself with us to enjoy more money.") %>
            </p>
	  </div>

	  <br />

	  <div class="justify row">
	    <i class="icon-group icon-big"></i>
            <p>
	      <%= _("Targeted advertising help you to find your own market.") %>
            </p>
	  </div>

	</div>
	<div class="large-4 columns">

	  <div class="row">
	    <section class="">
	      <div class="form">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

		  <div class="field">
		    <label><%=_("Email") %></label>
		    <%= f.email_field :email, :autofocus => true, :type => "text", :class => "input email", :placeholder=>_("E-mail") %>

		    <% if resource.errors[:email] -%>
		      <dd class="danger abel"><%= resource.errors[:email][0] %></dd>
		    <% end -%>
		  </div>

		  <% if resource.password_required? %>
		    <div class="field">
		      <label><%=_("Password") %></label>
		      <%= f.password_field :password, :class => "password input" %>
		      <% if resource.errors[:password] -%>
			<dd class="danger abel"><%= resource.errors[:password][0] %></dd>
		      <% end -%>

		    </div>

		    <div class="field">
		      <label><%=_("Confim Password") %></label>
		      <%= f.password_field :password_confirmation, :class => "password input" %>

		    </div>

		  <% end %>
		  <br>
		  <div class="submit"><%= f.submit "Sign up" , :class => "button" %></div>
		<% end %>

	      </div>

	    </section>
	  </div>


	</div>

      </div>
    </div>
  </div>
</div>
