	        <li class="bannerbtn tag" data-container-class="bannercontainers" data-target="tag-banner"><i class="icon-tag"></i></li>
	        <li class="bannerbtn user" data-container-class="bannercontainers" data-target="user-banner"><i class="icon-user"></i></li>
	        <li class="bannerbtn filter" data-container-class="bannercontainers" data-target="filter-banner"><i class="icon-filter"></i></li>
