<p id="notice"><%= notice %></p>

<p>
  <strong><%= _("title") %>:</strong>
  <%= @advertise.title %>
</p>

<p>
  <strong><%= _("category") %>:</strong>
  <%= @advertise.category.name %>
</p>
<p>
  <strong><%= _("show for days") %>:</strong>
  <%= @advertise.show_for_days %>
</p>

<p>
  <strong><%= _("cost") %>:</strong>
  <%= @advertise.cost %>
</p>

<p>
  <strong><%= _("size") %>:</strong>
  <%= @advertise.get_size %>
</p>
<p>
  <strong><%= _("cost per day") %>:</strong>
  <%= @advertise.cost_per_day %>
</p>
<p>
  <strong><%= _("deactive date") %>:</strong>
  <%= @advertise.deactive_date %>
</p>


<p>
  <strong><%= _("description") %>:</strong>
  <%= @advertise.description %>
</p>

<%= link_to _("Renew"), renew_advertise_url, class: "btn btn-success", icons: "icon-ok" %>
