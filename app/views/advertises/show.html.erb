<% if session[:dashboard] %>
  <%= link_to _('Back'), dashboard_index_path, class: back_btn_class, icons: back_btn_icon %>
<% else %>
  <%= link_to _('Back'), advertises_path, class: back_btn_class, icons: back_btn_icon %>
<% end -%>
