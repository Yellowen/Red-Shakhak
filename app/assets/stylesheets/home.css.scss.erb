@import "variables";

$text-direction: rtl;

$base_unit: 150px;
#adbox {
    width: 90%;
    margin: 0 auto;
}
.box {
    //float: right;
    margin: 0 0px 4px 0;
    padding: 0;
    display: block;
    overflow: hidden;

}

.innerbox {
    display: block;
}
.box1x1 {
    width: $base_unit;
    height: $base_unit;
}

.box2x1 {
    width: $base_unit * 2;
    height: $base_unit;
}

.box1x2 {
    width: $base_unit;
    height: $base_unit * 2;
}

.box2x2 {
    width: $base_unit * 2;
    height: $base_unit * 2;
}
.box3x2 {
    width: $base_unit * 3;
    height: $base_unit * 2;
}
.box2x3 {
    width: $base_unit * 2;
    height: $base_unit * 3;
}
.box3x3 {
    width: $base_unit * 3;
    height: $base_unit * 3;
}

.box3x1 {
    width: $base_unit * 3;
    height: $base_unit;
}

.box1x3 {
    width: $base_unit;
    height: $base_unit * 3;
}
